<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp5"
        android:paddingBottom="@dimen/dp5">

        <LinearLayout
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:text="@string/xx"
                android:textColor="@color/text_select_red"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺/公司名称"
                android:textColor="@color/goods_detail_title"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_business_name"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:textSize="@dimen/sp14"
            android:layout_weight="6.5"
            android:background="@null"
            android:inputType="text"
            android:paddingTop="@dimen/dp5"
            android:paddingBottom="@dimen/dp5" />
    </LinearLayout>

    <include layout="@layout/layout_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp5"
        android:paddingBottom="@dimen/dp5">

        <LinearLayout
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:text="@string/xx"
                android:textColor="@color/text_select_red"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实名制"
                android:textColor="@color/goods_detail_title"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_real_name"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_weight="6.5"
            android:background="@null"
            android:inputType="text"
            android:textSize="@dimen/sp14"
            android:paddingTop="@dimen/dp5"
            android:paddingBottom="@dimen/dp5" />
    </LinearLayout>

    <include layout="@layout/layout_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp5"
        android:paddingBottom="@dimen/dp5">

        <LinearLayout
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:text="@string/xx"
                android:textColor="@color/text_select_red"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系人手机号"
                android:textColor="@color/goods_detail_title"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_contacts_num"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_weight="6.5"
            android:background="@null"
            android:inputType="number"
            android:textSize="@dimen/sp14"
            android:paddingTop="@dimen/dp5"
            android:paddingBottom="@dimen/dp5" />
    </LinearLayout>

    <include layout="@layout/layout_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp5"
        android:paddingBottom="@dimen/dp5">

        <LinearLayout
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:text="@string/xx"
                android:textColor="@color/text_select_red"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="入驻类型"
                android:textColor="@color/goods_detail_title"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_enter_type"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_weight="6.5"
            android:background="?attr/selectableItemBackground"
            android:cursorVisible="false"
            android:drawableRight="@mipmap/arrow_right"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="请选择入驻类型"
            android:paddingTop="@dimen/dp7"
            android:paddingBottom="@dimen/dp7"
            android:textSize="@dimen/sp14" />
    </LinearLayout>

    <include layout="@layout/layout_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp5"
        android:paddingBottom="@dimen/dp5">

        <LinearLayout
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:text="@string/xx"
                android:textColor="@color/text_select_red"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="入驻时长"
                android:textColor="@color/goods_detail_title"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_enter_time"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_weight="6.5"
            android:background="?attr/selectableItemBackground"
            android:cursorVisible="false"
            android:drawableRight="@mipmap/arrow_right"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="请点击选择"
            android:paddingTop="@dimen/dp7"
            android:paddingBottom="@dimen/dp7"
            android:textSize="@dimen/sp14" />
    </LinearLayout>

    <include layout="@layout/layout_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp5"
        android:paddingBottom="@dimen/dp5">

        <LinearLayout
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:text="@string/xx"
                android:textColor="@color/text_select_red"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现经营地址"
                android:textColor="@color/goods_detail_title"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_manage_address"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_weight="6.5"
            android:background="?attr/selectableItemBackground"
            android:cursorVisible="false"
            android:drawableRight="@mipmap/arrow_right"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="请选择地址"
            android:paddingTop="@dimen/dp7"
            android:paddingBottom="@dimen/dp7"
            android:textSize="@dimen/sp14" />
    </LinearLayout>

    <include layout="@layout/layout_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp5"
        android:paddingBottom="@dimen/dp5">

        <LinearLayout
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:text="@string/xx"
                android:textColor="@color/text_select_red"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详细经营地址"
                android:textColor="@color/goods_detail_title"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_detail_address"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_weight="6.5"
            android:background="@null"
            android:inputType="text"
            android:paddingTop="@dimen/dp5"
            android:textSize="@dimen/sp14"
            android:paddingBottom="@dimen/dp5" />
    </LinearLayout>

    <include layout="@layout/layout_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp5"
        android:paddingBottom="@dimen/dp5">

        <LinearLayout
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:text="@string/xx"
                android:textColor="@color/text_select_red"
                android:textSize="@dimen/sp16"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="业务员工号"
                android:textColor="@color/goods_detail_title"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_clerk"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_weight="6.5"
            android:background="@null"
            android:inputType="number"
            android:paddingTop="@dimen/dp5"
            android:textSize="@dimen/sp14"
            android:paddingBottom="@dimen/dp5" />
    </LinearLayout>

    <include layout="@layout/layout_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp5"
        android:paddingBottom="@dimen/dp5">

        <CheckBox
            android:id="@+id/check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/selector_cart_checkbox"
            android:padding="@dimen/dp5" />

        <TextView
            android:id="@+id/tv_enter_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_agreement"
            android:textSize="@dimen/sp13" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginRight="@dimen/dp20"
        android:background="@drawable/solid_bg_revise_button"
        android:gravity="center"
        android:text="提交资料，等待审核"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp16" />
</LinearLayout>